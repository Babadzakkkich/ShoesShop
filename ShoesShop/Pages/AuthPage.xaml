<Page x:Class="ShoesShop.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                CornerRadius="10"
                Padding="30"
                Margin="20"
                Width="400"
                HorizontalAlignment="Center">

            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                          Style="{StaticResource HeaderTextStyle}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <!-- Поле логина -->
                <TextBlock Text="Логин:" 
                          Style="{StaticResource NormalTextStyle}"
                          Margin="0,10,0,5"/>
                <TextBox x:Name="LoginTextBox" 
                        Style="{StaticResource PrimaryTextBoxStyle}"
                        Height="35"
                        TextChanged="LoginTextBox_TextChanged"
                        KeyDown="LoginTextBox_KeyDown"/>

                <!-- Поле пароля -->
                <TextBlock Text="Пароль:" 
                          Style="{StaticResource NormalTextStyle}"
                          Margin="0,10,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                            Height="35"
                            FontFamily="{StaticResource MainFontFamily}"
                            FontSize="14"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="5"
                            Margin="5"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            KeyDown="PasswordBox_KeyDown"/>

                <!-- Кнопка входа -->
                <Button x:Name="LoginButton" 
                        Content="Войти" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40"
                        Margin="0,20,0,10"
                        Click="LoginButton_Click"/>

                <!-- Разделитель -->
                <Border Height="1" 
                        Background="LightGray" 
                        Margin="0,10"/>

                <!-- Кнопка входа как гостя -->
                <Button x:Name="GuestButton" 
                        Content="Продолжить как гость" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        Click="GuestButton_Click"/>

                <!-- Информационный текст -->
                <TextBlock Text="Для входа используйте логин и пароль от учётной записи. Или продолжите как гость для просмотра товаров."
                          Style="{StaticResource NormalTextStyle}"
                          FontSize="12"
                          TextWrapping="Wrap"
                          Margin="0,15,0,0"
                          TextAlignment="Center"
                          Foreground="Gray"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>