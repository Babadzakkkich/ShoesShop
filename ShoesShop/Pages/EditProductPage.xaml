<Page x:Class="ShoesShop.Pages.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="600"
      Title="Товар"
      Background="White">

    <Page.Resources>
        <ResourceDictionary Source="../Styles.xaml"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock x:Name="PageTitle" 
                     Text="Добавление товара"
                     Style="{StaticResource HeaderTextStyle}"
                     FontSize="18"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,20"/>

            <!-- Изображение товара -->
            <GroupBox Header="Изображение товара" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <StackPanel>
                    <Border Height="200" 
                           Background="LightGray"
                           CornerRadius="5"
                           Margin="0,0,0,10">
                        <Image x:Name="ProductImage" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="SelectImageButton" 
                               Content="Выбрать изображение" 
                               Style="{StaticResource PrimaryButtonStyle}"
                               Click="SelectImageButton_Click"
                               Margin="0,0,10,0"/>

                        <Button x:Name="ClearImageButton" 
                               Content="Удалить изображение" 
                               Style="{StaticResource PrimaryButtonStyle}"
                               Click="ClearImageButton_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="ImagePathText" 
                             Foreground="Gray"
                             TextWrapping="Wrap"
                             Margin="0,10,0,0"
                             TextAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <!-- Основная информация -->
            <GroupBox Header="Основная информация" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Артикул:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="ArticleTextBox" 
                            Style="{StaticResource PrimaryTextBoxStyle}" 
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Наименование товара:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox" 
                            Style="{StaticResource PrimaryTextBoxStyle}" 
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Описание товара:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="DescriptionTextBox" 
                            Style="{StaticResource PrimaryTextBoxStyle}"
                            Height="80"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Цена:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="PriceTextBox" 
                            Style="{StaticResource PrimaryTextBoxStyle}" 
                            Margin="0,0,0,15"/>
                </StackPanel>
            </GroupBox>

            <!-- Категория и производитель -->
            <GroupBox Header="Классификация" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Категория товара:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="CategoryComboBox" 
                             Style="{StaticResource PrimaryComboBoxStyle}"
                             DisplayMemberPath="Категория"
                             SelectedValuePath="ID"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Производитель:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="ManufacturerComboBox" 
                             Style="{StaticResource PrimaryComboBoxStyle}"
                             DisplayMemberPath="Производитель"
                             SelectedValuePath="ID"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Поставщик:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="SupplierComboBox" 
                             Style="{StaticResource PrimaryComboBoxStyle}"
                             DisplayMemberPath="Поставщик"
                             SelectedValuePath="ID"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </GroupBox>

            <!-- Склад и скидки -->
            <GroupBox Header="Склад и скидки" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
                        <TextBlock Text="Единица измерения:" 
                                 Style="{StaticResource NormalTextStyle}" 
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="UnitTextBox" 
                                Style="{StaticResource PrimaryTextBoxStyle}" 
                                Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                        <TextBlock Text="Количество на складе:" 
                                 Style="{StaticResource NormalTextStyle}" 
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="StockTextBox" 
                                Style="{StaticResource PrimaryTextBoxStyle}" 
                                Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                        <TextBlock Text="Действующая скидка (%):" 
                                 Style="{StaticResource NormalTextStyle}" 
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="DiscountTextBox" 
                                Style="{StaticResource PrimaryTextBoxStyle}" 
                                Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                        <TextBlock Text="Скидка (%):" 
                                 Style="{StaticResource NormalTextStyle}" 
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="Discount2TextBox" 
                                Style="{StaticResource PrimaryTextBoxStyle}" 
                                Margin="0,0,0,15"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="SaveButton" 
                       Content="Сохранить" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Click="SaveButton_Click"
                       Width="100"
                       Margin="0,0,10,0"/>

                <Button x:Name="DeleteButton" 
                       Content="Удалить" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Click="DeleteButton_Click"
                       Width="100"
                       Background="Red"
                       Foreground="White"
                       Margin="0,0,10,0"
                       Visibility="Collapsed"/>

                <Button x:Name="CancelButton" 
                       Content="Отмена" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Click="CancelButton_Click"
                       Width="100"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>