<Page x:Class="ShoesShop.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ShoesShop.Pages"
      Title="Товары">

    <Page.Resources>
        <ResourceDictionary Source="../Styles.xaml"/>
    </Page.Resources>

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления (видна только менеджерам и администраторам) -->
        <Border Grid.Row="0" 
                Background="{StaticResource SecondaryBackgroundBrush}" 
                Padding="10"
                x:Name="ControlPanel"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Поиск -->
                    <TextBox x:Name="SearchTextBox" 
                            Width="200" 
                            Height="30"
                            Style="{StaticResource PrimaryTextBoxStyle}"
                            TextChanged="SearchTextBox_TextChanged"
                            ToolTip="Поиск по названию, описанию, категории, производителю"/>

                    <!-- Фильтр по поставщику -->
                    <ComboBox x:Name="SupplierFilterComboBox" 
                            Width="150" 
                            Height="30"
                            Style="{StaticResource PrimaryComboBoxStyle}"
                            SelectionChanged="SupplierFilterComboBox_SelectionChanged"
                            Margin="10,0,0,0"
                            DisplayMemberPath="Поставщик"/>

                    <!-- Сортировка по количеству -->
                    <ComboBox x:Name="SortComboBox" 
                            Width="180" 
                            Height="30"
                            Style="{StaticResource PrimaryComboBoxStyle}"
                            SelectionChanged="SortComboBox_SelectionChanged"
                            Margin="10,0,0,0">
                        <ComboBoxItem Content="Количество: по умолчанию"/>
                        <ComboBoxItem Content="Количество: по возрастанию"/>
                        <ComboBoxItem Content="Количество: по убыванию"/>
                    </ComboBox>
                </StackPanel>

                <!-- Кнопка "Добавить товар" только для администратора -->
                <Button Grid.Column="1"
                        x:Name="AddProductButton"
                        Content="+ Добавить товар"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="AddProductButton_Click"
                        Visibility="Collapsed"/>

                <!-- Кнопка "Заказы" -->
                <Button Grid.Column="2"
                        x:Name="OrdersButton"
                        Content="Заказы"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="OrdersButton_Click"
                        Margin="10,0,0,0"
                        Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="10">
            <ItemsControl x:Name="ProductsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ProductBorder" 
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="10"
                                Margin="0,5"
                                Cursor="Hand"
                                MouseLeftButtonUp="ProductBorder_MouseLeftButtonUp"
                                Tag="{Binding ID}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <!-- Фото товара -->
                                <Border Grid.Column="0" 
                                        Width="130" 
                                        Height="130" 
                                        Background="LightGray"
                                        CornerRadius="5"
                                        Margin="10">
                                    <Image Source="{Binding ImageSource}"
                                           Stretch="UniformToFill"/>
                                </Border>

                                <!-- Информация о товаре -->
                                <StackPanel Grid.Column="1" 
                                            Margin="10">
                                    <!-- Наименование и категория -->
                                    <TextBlock FontWeight="Bold" 
                                              FontSize="16"
                                              Text="{Binding Наименование_товара}"/>
                                    <TextBlock Text="{Binding Категории.Категория}" 
                                              Foreground="Gray"
                                              Margin="0,2,0,10"/>

                                    <!-- Описание -->
                                    <TextBlock Text="{Binding Описание_товара}" 
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,5"
                                              MaxHeight="40"
                                              TextTrimming="CharacterEllipsis"/>

                                    <!-- Производитель и поставщик -->
                                    <TextBlock Text="{Binding Производители.Производитель}" 
                                              Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding Поставщики.Поставщик}" 
                                              Foreground="Gray"
                                              Margin="0,2,0,0"/>

                                    <!-- Цена -->
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,5,0,0">
                                        <TextBlock x:Name="OriginalPriceText"
                                                  Text="{Binding FormattedPrice}"
                                                  Margin="0,0,5,0"/>
                                        <TextBlock x:Name="DiscountedPriceText"
                                                  FontWeight="Bold"
                                                  Text="{Binding FormattedDiscountedPrice}"
                                                  Visibility="{Binding HasDiscount, Converter={x:Static local:ProductsPage.BoolToVisibilityConverter}}"/>
                                    </StackPanel>

                                    <!-- Единица измерения и количество -->
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Единица_измерения}" 
                                                  Margin="0,0,10,0"/>
                                        <TextBlock x:Name="StockText"
                                                  Text="{Binding StockStatus}"
                                                  Foreground="{Binding StockColor}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Блок скидки -->
                                <Border Grid.Column="2" 
                                        x:Name="DiscountBorder"
                                        Background="{StaticResource AccentBrush}" 
                                        CornerRadius="5"
                                        Margin="10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Width="80" 
                                        Height="40"
                                        Visibility="{Binding HasDiscount, Converter={x:Static local:ProductsPage.BoolToVisibilityConverter}}">
                                    <TextBlock x:Name="DiscountText"
                                              Text="{Binding FormattedDiscount}"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              FontWeight="Bold"
                                              FontSize="16"/>
                                </Border>
                            </Grid>
                        </Border>

                        <DataTemplate.Triggers>
                            <!-- Триггер для скидки > 15% -->
                            <DataTrigger Binding="{Binding IsHighDiscount}" Value="True">
                                <Setter TargetName="ProductBorder" Property="Background" Value="#FF2E8B57"/>
                            </DataTrigger>

                            <!-- Триггер для отсутствия товара -->
                            <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                <Setter TargetName="ProductBorder" Property="Background" Value="LightBlue"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Сообщение при отсутствии товаров -->
        <TextBlock Grid.Row="1" 
                  x:Name="NoProductsText"
                  Text="Товары не найдены" 
                  Style="{StaticResource HeaderTextStyle}"
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
                  Visibility="Collapsed"/>
    </Grid>
</Page>