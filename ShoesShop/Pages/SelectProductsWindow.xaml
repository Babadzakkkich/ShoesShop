<Window x:Class="ShoesShop.Pages.SelectProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор товаров" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поиск -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Поиск товаров:" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="SearchTextBox" 
                    TextChanged="SearchTextBox_TextChanged"
                    Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#F5F5F5" 
            CornerRadius="3" 
            Padding="10" 
            Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Чекбокс выбора -->
                                <CheckBox Grid.Column="0" 
                     IsChecked="{Binding IsSelected}"
                     VerticalAlignment="Center"
                     Margin="0,0,10,0"/>

                                <!-- Информация о товаре -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Наименование_товара}" 
                          FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Артикул: " 
                              Foreground="Gray"/>
                                        <TextBlock Text="{Binding Артикул}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Цена: " 
                              Foreground="Gray"/>
                                        <TextBlock Text="{Binding Цена, StringFormat={}{0:N2} руб.}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="В наличии: " 
                              Foreground="Gray"/>
                                        <TextBlock Text="{Binding Количество_на_складе, StringFormat={}{0} шт.}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Поле ввода количества -->
                                <StackPanel Grid.Column="2" 
                       VerticalAlignment="Center">
                                    <TextBlock Text="Количество:" 
                          FontSize="10"
                          Foreground="Gray"/>
                                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                        Width="50"
                        TextAlignment="Center"
                        IsEnabled="{Binding IsSelected}"
                        Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Выбрать" 
                    Click="SelectButton_Click"
                    Width="80"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>