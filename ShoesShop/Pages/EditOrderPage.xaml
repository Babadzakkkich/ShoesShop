<Page x:Class="ShoesShop.Pages.EditOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ShoesShop.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="600"
      Title="Заказ"
      Background="White">

    <Page.Resources>
        <ResourceDictionary Source="../Styles.xaml"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock x:Name="PageTitle" 
                     Text="Добавление заказа"
                     Style="{StaticResource HeaderTextStyle}"
                     FontSize="18"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,20"/>

            <!-- Основная информация -->
            <GroupBox Header="Основная информация" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Пользователь:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="UserComboBox" 
                             Style="{StaticResource PrimaryComboBoxStyle}"
                             DisplayMemberPath="ФИО"
                             SelectedValuePath="ID"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Статус заказа:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="StatusComboBox" 
                             Style="{StaticResource PrimaryComboBoxStyle}"
                             DisplayMemberPath="Статус"
                             SelectedValuePath="ID"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Пункт выдачи:" 
                             Style="{StaticResource NormalTextStyle}" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="PickupPointComboBox" 
                             Style="{StaticResource PrimaryComboBoxStyle}"
                             DisplayMemberPath="Адрес"
                             SelectedValuePath="ID"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </GroupBox>

            <!-- Даты -->
            <GroupBox Header="Даты" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Дата заказа:" 
                                 Style="{StaticResource NormalTextStyle}" 
                                 Margin="0,0,0,5"/>
                        <DatePicker x:Name="OrderDatePicker" 
                                   Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Дата доставки:" 
                                 Style="{StaticResource NormalTextStyle}" 
                                 Margin="0,0,0,5"/>
                        <DatePicker x:Name="DeliveryDatePicker" 
                                   Margin="0,0,0,15"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Код для получения -->
            <GroupBox Header="Код для получения" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <StackPanel>
                    <TextBox x:Name="CodeTextBox" 
                            Style="{StaticResource PrimaryTextBoxStyle}"
                            TextAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"/>
                    <TextBlock Text="Уникальный код для получения заказа в пункте выдачи"
                             Foreground="Gray"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Товары в заказе -->
            <GroupBox Header="Товары в заказе" 
                     BorderBrush="LightGray" 
                     BorderThickness="1"
                     Margin="0,0,0,20">
                <StackPanel>
                    <!-- Список товаров -->
                    <ItemsControl x:Name="OrderItemsControl" 
                                 Margin="0,0,0,15">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F5F5F5"
                                        CornerRadius="3"
                                        Padding="10"
                                        Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Товары.Наименование_товара}"
                                                      FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Артикул: " 
                                                          Foreground="Gray"/>
                                                <TextBlock Text="{Binding Товары.Артикул}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Цена: " 
                                                          Foreground="Gray"/>
                                                <TextBlock Text="{Binding Цена_на_момент_заказа, StringFormat={}{0:N2} руб.}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Сумма: " 
                                                          Foreground="Gray"/>
                                                <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N2} руб.}"
                                                          FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" 
                                                    HorizontalAlignment="Right">
                                            <TextBlock Text="Количество:" 
                                                      FontSize="10"
                                                      Foreground="Gray"/>
                                            <TextBox Text="{Binding Количество_товара, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="50"
                                                    TextAlignment="Center"
                                                    Margin="0,2,0,0"/>
                                            <Button Content="Удалить"
                                                    Tag="{Binding ID}"
                                                    Click="RemoveItemButton_Click"
                                                    Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Кнопка добавления товара -->
                    <Button x:Name="AddItemButton"
                           Content="+ Добавить товар"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="AddItemButton_Click"
                           HorizontalAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <!-- Итоговая сумма -->
            <Border Background="LightGreen"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Общая сумма заказа:"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalSumText"
                              Text="0 руб."
                              FontSize="20"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="SaveButton" 
                       Content="Сохранить" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Click="SaveButton_Click"
                       Width="100"
                       Margin="0,0,10,0"/>

                <Button x:Name="DeleteButton" 
                       Content="Удалить" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Click="DeleteButton_Click"
                       Width="100"
                       Background="Red"
                       Foreground="White"
                       Margin="0,0,10,0"
                       Visibility="Collapsed"/>

                <Button x:Name="CancelButton" 
                       Content="Отмена" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Click="CancelButton_Click"
                       Width="100"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>